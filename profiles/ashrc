export PS1='\[\e[30m\e[43m\]\w\[\e[00m\] '

export FZF_DEFAULT_COMMAND='fd --type f --path-separator /'
export DOTNET_CLI_TELEMETRY_OPTOUT=True

alias ls='ls -Aph --group-directories-first'
alias clip=copycat
alias fd='fd --path-separator / '
alias rg='rg --no-ignore-global --path-separator /'
alias pp='pepper -c ~/pepper-config/init.pp'

open() {
	cmd /C "start $1"
}

download_profiles() {
	curl -s 'https://raw.githubusercontent.com/vamolessa/up/master/download-profiles.sh' | sh
}

download_omnisharp_config() {
	curl 'https://raw.githubusercontent.com/vamolessa/up/master/profiles/omnisharp.json' -O
}

ff() {
	currentPath=$(printf "%s/" `pwd`)
	file=`fzf --layout=reverse --prompt=$currentPath --no-sort --filepath-word --preview="cat {}"`
	if [ -e $file ]
	then
		echo $file
		echo -n $file | clip
	fi
}
